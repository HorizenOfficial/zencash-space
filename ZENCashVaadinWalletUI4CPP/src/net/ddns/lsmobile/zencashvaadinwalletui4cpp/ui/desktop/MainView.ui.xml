<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<?xdevuiml version="1.0"?>
<?template BROWSER_XGA?>
<?import com.xdev.ui.XdevGridLayout?>
<?import com.xdev.ui.XdevMenuBar?>
<?import com.xdev.ui.XdevMenuBar.XdevMenuItem?>
<?import com.xdev.ui.XdevTabSheet?>
<?import com.xdev.ui.XdevView?>
<XdevView xmlns:x="http://xml.xdev-software.com/xdevuiml" x:name="MainView">
    <x:constraints zpos="0" width="100%" height="100%" />
    <XdevGridLayout x:name="gridLayout">
        <x:constraints zpos="0" width="100%" height="100%" />
        <XdevMenuBar x:name="menuBar">
            <x:constraints gridx="1" gridy="1" weighty="0.0" weightx="1.0" width="100%" />
            <XdevMenuItem x:name="menuItemMain" text="Main">
                <XdevMenuItem x:name="menuItemAbout" text="About..." />
            </XdevMenuItem>
            <XdevMenuItem x:name="menuItemWallet" text="Wallet">
                <XdevMenuItem x:name="menuItemBackup" text="Backup..." />
                <XdevMenuItem enabled="false" x:name="menuItemEncrypt" text="Encrypt..." />
                <XdevMenuItem x:name="menuItemExportPrivateKeys" text="Export private keys..." />
                <XdevMenuItem x:name="menuItemImportPrivateKeys" text="Import private keys..." />
                <XdevMenuItem x:name="menuItemShowPrivateKey" text="Show private key..." />
                <XdevMenuItem x:name="menuItemImportOnePrivateKey" text="Import one private key..." />
            </XdevMenuItem>
            <XdevMenuItem x:name="menuItemMessaging" text="Messaging">
                <XdevMenuItem x:name="menuItemOwnIdentity" text="Own identity..." />
                <XdevMenuItem x:name="menuItemExportOwnIdentity" text="Export own identity..." />
                <XdevMenuItem x:name="menuItemAddMessagingGroup" text="Add messaging group..." />
                <XdevMenuItem x:name="menuItemImportContactIdentity" text="Import contact identity..." />
                <XdevMenuItem x:name="menuItemRemoveContact" text="Remove contact..." />
                <XdevMenuItem x:name="menuItemOptions" text="Options..." />
            </XdevMenuItem>
        </XdevMenuBar>
        <XdevTabSheet styleName="framed" x:name="tabSheet" x:selectedTabIndex="0">
            <x:constraints gridx="1" gridy="2" weighty="1.0" weightx="1.0" width="100%" height="100%" />
            <XdevGridLayout caption="Overview" x:name="tabOverview">
                <x:constraints width="100%" height="100%" />
            </XdevGridLayout>
            <XdevGridLayout caption="Own addresses" x:name="tabOwnAddresses">
                <x:constraints width="100%" height="100%" />
            </XdevGridLayout>
            <XdevGridLayout caption="Send cash" x:name="tabSendCash">
                <x:constraints width="100%" height="100%" />
            </XdevGridLayout>
            <XdevGridLayout caption="Address book" x:name="tabAddressBook">
                <x:constraints width="100%" height="100%" />
            </XdevGridLayout>
            <XdevGridLayout caption="Messaging" x:name="tabMessaging">
                <x:constraints width="100%" height="100%" />
            </XdevGridLayout>
        </XdevTabSheet>
    </XdevGridLayout>
</XdevView>

